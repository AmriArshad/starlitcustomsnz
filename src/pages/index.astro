	<main>
		<!-- Hero Section -->
		<section class="hero">
			<div class="stars"></div>
			<div class="container">
				<div class="hero-content">
					<Image
						src={logo}
						alt="Starlit Customs"
						class="logo"
						width={1093}
						height={1000}
					/>
					<h1 class="hero-title">
						Transform Your Interior<br />
						<span class="gradient-text">Into A Night Sky</span>
					</h1>
					<p class="hero-subtitle">
						Premium fibre-optic starlight headliner installations<br
						/>
						Handcrafted in Auckland, New Zealand
					</p>
					<div class="cta-buttons">
						<a href="#contact" class="btn btn-primary"
							>Book Your Install</a
						>
						<a
							href="https://www.instagram.com/starlitcustomsnz/"
							target="_blank"
							rel="noopener"
							class="btn btn-secondary"
